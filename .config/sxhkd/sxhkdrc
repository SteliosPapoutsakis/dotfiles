#lock screen
alt + l
	light-locker-command -l
# shutdown
alt + Delete
	sudo shutdown -h now
# control brighness
alt + {F5, F6}
	brightness {down,up} 10
# launch web browser
alt + w
	/usr/bin/chromium
# bluetooth pair
alt + b
	dmenu-bluetooth
# Alt volume
alt + {F1,F2,F3}
	amixer -q set Master {0%,5%-,5%+}
# see wifi networks 
alt + n
	/usr/bin/wpa_gui
