# lock screen
control + l
	light-locker-command -l
# shutdown
control + Delete
	sudo shutdown -h now
# control brighness
control + {F5, F6}
	brightness {down,up} 10
# launch web browser
control + w
	/usr/bin/chromium
# get passwords
control + p
	~/.local/bin/dpass
# bluetooth pair
control + b
	dmenu-bluetooth
# control volume
control + {F1,F2,F3}
	amixer -q set Master {0%,5%-,5%+}
