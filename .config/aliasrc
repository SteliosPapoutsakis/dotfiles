# use nvim instead of vim if present
command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d" vi="nvim"

# shorten some command
alias c=clear \
	q=exit \
	ll='ls -l'

# used to backup my dotfiles
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME'

# add some color to commands!
alias egrep='egrep --color=auto' \
	fgrep='fgrep --color=auto' \
	grep='grep --color=auto' \
	ls='ls --color' \

# add copy paste ability on command line
alias copy='xclip -selection clipboard' \
	paste='xclip -selection clipboard -o'

# some quick cd commands to key directories
alias pf='cd /home/stelios/personal-files' \
	sw='cd /home/stelios/software'	\
	dw='cd /home/stelios/personal-files/downloads'
